@model SurucuKursu.Models.OnKayit

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="contact_section layout_padding">
    <div class="container-fluid">
        <h1 class="ballet_text">Ön Kayıt</h1>
        <p class="amet_text">Hızlıca ön kayıt olun. Sizi arayalım </p>
        <div class="contact_section2">
            <div class="row">
                <div class="col-md-6 padding_left_0">
                    <div class="mail_section">

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
            <input asp-for="Ad" class="form-control mail_text" placeholder="@Html.DisplayNameFor(model => model.Ad)" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>
            <div class="form-group">
                                <input asp-for="Sayad" class="form-control mail_text" placeholder="@Html.DisplayNameFor(model => model.Sayad)" />
                <span asp-validation-for="Sayad" class="text-danger"></span>
            </div>
            <div class="form-group">
                                <input asp-for="TelNo" class="form-control mail_text"  placeholder="@Html.DisplayNameFor(model => model.TelNo)" />
                <span asp-validation-for="TelNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                                <input asp-for="Mail" class="form-control mail_text" placeholder="@Html.DisplayNameFor(model => model.Mail)" />
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>
            <div class="form-group">
                                <input asp-for="Aciklama" class="form-control massage_text" placeholder="@Html.DisplayNameFor(model => model.Aciklama)" />
                <span asp-validation-for="Aciklama" class="text-danger"></span>
            </div>
            <div class="form-group">
                                <input type="submit" value="Create" class="send_bt" />
            </div>
        </form>
                    </div>
                </div>
                <div class="col-md-6 padding_0">
                    <div class="map-responsive">
                        <iframe src="https://www.google.com/maps/embed/v1/place?key=AIzaSyA0s1a7phLN0iaD6-UE7m4qP-z21pH0eSc&amp;q=Eiffel+Tower+Paris+France" width="600" height="400" frameborder="0" style="border:0; width: 100%;" allowfullscreen=""></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


