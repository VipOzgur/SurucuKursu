@model IEnumerable<SurucuKursu.Models.Araclar>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Adı)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plaka)
            </th>
            <th>
                Resim
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Adı)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Plaka)
            </td>
            <td>
                
                    @{
                        var c= item.GetAracResims(item.Id);

                        if(c!=null){
                            @foreach(var ite in c){
                            <text><img src="data:image;base64,@Html.DisplayFor(modelItem => ite.Resim)" alt="base64 e dönüştürülmüş resim" style="height:80px; width:80px;">
                            </text>
                            }}
                    }
            </td>
                    @item.Id
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
