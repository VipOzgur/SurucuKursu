@using System.Security.Claims;
@model SurucuKursu.Models.Yoneticiler

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Yoneticiler</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Profil)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Profil != null)
            {
                    <img src="data:image;base64,@Html.DisplayFor(model => model.Profil)" alt="Profil" style="height:180px; width:180px;">
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.KullaniciAdi)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KullaniciAdi)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Meil)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Meil)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        @if (User.FindFirst(ClaimTypes.Role).Value == "Admin")
        {
           <a asp-action="Index">Back to List</a>
        }
    </form>
</div>
