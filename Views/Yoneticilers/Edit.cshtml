@using System.Security.Claims;
@model SurucuKursu.Models.Yoneticiler

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>Yoneticiler</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            @if(Model.Profil != null){
            <div class="form-group">
                <img src="data:image;base64,@Html.DisplayFor(model => model.Profil)" alt="Profil" style="height:180px; width:180px;">
            </div>
            }
            <div class="form-group">
                <label asp-for="ImgFile" class="control-label"></label>
                <input asp-for="ImgFile" class="form-control" type="file" placeholder="Yeni profil ekle"/>
                <input asp-for="Profil" value="@Model.Profil" type="hidden" />
                <input asp-for="Pasword" value="@Model.Pasword" type="hidden" />
                <input asp-for="Role" value="@Model.Role" type="hidden" />
                <span asp-validation-for="ImgFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div id="imagePreview"></div>
            </div>
            <div class="form-group">
                <label asp-for="KullaniciAdi" class="control-label"></label>
                <input asp-for="KullaniciAdi" class="form-control" />
                <span asp-validation-for="KullaniciAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Meil" class="control-label"></label>
                <input asp-for="Meil" class="form-control" />
                <span asp-validation-for="Meil" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="control-label"></label>
                <select asp-for="Role" class="form-control">
                    <option value="Admin">Admin</option>
                    <option value="User">User</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="newPassword" class="control-label">Yeni Şifrenizi Girin</label>
                <input asp-for="newPassword" class="form-control" placeholder="Girmezseniz eski şifreniz aktif kalır" />
                <span asp-validation-for="newPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@if(User.FindFirst(ClaimTypes.Role).Value == "Admin")
{    
<div>
    <a asp-action="Index">Back to List</a>
</div>
}

